{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {
			// Update 'VARIANT' to pick a Python version: 3, 3.6, 3.7, 3.8, 3.9
			"VARIANT": "3.9",
			// Options
			"INSTALL_NODE": "true",
			"NODE_VERSION": "lts/*"
		}
	},

	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
				"settings": {
					"terminal.integrated.shell.linux": "/bin/bash",
					"python.pythonPath": "/usr/local/bin/python",
					"git.openRepositoryInParentFolders": "always",
					"python.analysis.autoFormatStrings": true,
					"python.analysis.autoImportCompletions": true,				
					"python.terminal.activateEnvInCurrentTerminal": true,
					"editor.defaultFormatter": "charliermarsh.ruff",
					"editor.formatOnSave": true,				
					"ruff.lint.enable": false,
					"ruff.lineLength": 128,
					"ruff.nativeServer": true				
				},
				"extensions": [
					"charliermarsh.ruff",
					"eamodio.gitlens",
					"github.vscode-pull-request-github",
					"mhutchie.git-graph",
					"ms-python.debugpy",
					"ms-python.python",
					"ms-python.vscode-pylance",
					"ms-vscode-remote.remote-ssh",
					"ms-vscode-remote.remote-ssh-edit",
					"ms-vscode.remote-explorer",
					"shd101wyy.markdown-preview-enhanced"
				],
			}
		},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [5173, 5050],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": {
    "initWorkFolder": "cp -n python/defaults/* python/work/",
    "initReactFolder": "cd react/public && (ln -s ../../python/work/web web || true)",
    "python": "pip3 install --user -r python/requirements.txt -r python/requirements-devel.txt",
    "npm": "cd react && npm install"
  },

	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}
